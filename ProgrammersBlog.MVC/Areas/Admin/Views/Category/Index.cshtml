@using ProgrammersBlog.Shared.Utilities.Results.ComplexTypes
@model ProgrammersBlog.Entities.DTOs.CategoryListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Categories Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Categories
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active</th>
                            <th>Is Deleted</th>
                            <th>Note</th>
                            <th>Created DAte</th>
                            <th>Created By Name</th>
                            <th>Last Modified Date</th>
                            <th>Last Modified By</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active</th>
                            <th>Is Deleted</th>
                            <th>Note</th>
                            <th>Created DAte</th>
                            <th>Created By Name</th>
                            <th>Last Modified Date</th>
                            <th>Last Modified By</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedByName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>@category.ModifiedByName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-2">
        
        @Model.Message<br/>
        
        Please <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Click</a> For Navigating To The Dashboard

    </div>
}
    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('#categoriesTable').DataTable({
                    dom:
                        "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                    buttons: [
                        {
                            text: 'Add',
                            className: 'btn btn-success mr-2',
                            action: function (e, dt, node, config) {
                                alert('Add Button.');
                            }
                        },
                        {
                            text: 'Refresh',
                            className: 'btn btn-warning',
                            action: function (e, dt, node, config) {
                                alert('Refresh Button');
                            }
                        }
                    ]
                });
            });
        </script>
    }
